private List<FUNCPTR> pointers becomes new(List<FUNCPTR>)

public func(FUNCPTR ptr) addFunction { pointers.add(ptr) }

public func(EvtArgs args) raise { 
	
	foreach(ptr,pointers.toArray) {
		
		;if (ptr,=,null) { continue }
